<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gonorus.makancepatkurir.view.FragmentTransaksiKurir">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:background="@drawable/bg_profil"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/dummy_profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:civ_fill_color="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNamaPemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sampel Nama Pemesan"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/txtEmailPemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SampelEmail@Pemesan.com"
                    android:textSize="14sp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/TablePemesanan"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        </TableLayout>

    </LinearLayout>

</FrameLayout>
